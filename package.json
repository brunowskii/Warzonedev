{
  "name": "warzone-tournament-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server.js",
    "client:dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "start": "node server.js",
    "lint": "eslint .",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "serve": "vite preview --host 0.0.0.0 --port 4173",
    "server:prod": "NODE_ENV=production node server.js",
    "test:connection": "node scripts/test-mongodb.js",
    "setup:atlas": "node scripts/setup-atlas.js",
    "setup:env": "cp .env.example .env && echo 'âœ… .env file created from template. Please edit with your values.'",
    "deploy:free": "node scripts/deploy-free.js",
    "deploy:prepare": "npm run build && git add . && git commit -m 'Prepare for deployment' && git push",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop warzone-app",
    "pm2:restart": "pm2 restart warzone-app",
    "pm2:logs": "pm2 logs warzone-app",
    "pm2:monitor": "pm2 monit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "html2canvas": "^1.4.1",
    "joi": "^17.11.0",
    "lucide-react": "^0.344.0",
    "mongoose": "^7.8.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.6.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "nodemon": "^3.1.10",
    "pm2": "^5.3.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
